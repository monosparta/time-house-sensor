  "dependencies": {
    "@line/bot-sdk": "^7.5.0",
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "fs": "^0.0.1-security",
    "helmet": "^5.1.0",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.29.3",
    "moment-timezone": "^0.5.34",
    "morgan": "^1.10.0",
    "mqtt": "^4.3.7",
    "mysql2": "^2.3.3",
    "path": "^0.12.7",
    "sequelize": "^6.18.0",
    "sequelize-cli": "^6.4.1",
    "uuid": "^8.3.2",
    "winston": "^3.7.2"
  },
  "devDependencies": {
    "jest": "^27.5.1",
    "supertest": "^6.2.3"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/test/controllers/",
      "/test/middleware/"
    ],
    "collectCoverage": true
  }
